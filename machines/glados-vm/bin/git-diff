#!/bin/bash

PS3="File: "
read -p "Branch: " branch 
mergebase=`git merge-base origin/develop $branch`
files=$(git diff --name-only $mergebase $branch)

if [ -z "$files" ]
then
    echo  "No files found, possibly merged branch"
fi
select file in $files;
do
    git difftool -y --tool meld $mergebase $branch -- $file
done

